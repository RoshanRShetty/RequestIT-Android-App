<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:id="@+id/lytMenuItem"
    android:background="@drawable/home_grid_cell_drawable"
    android:gravity="center"
    android:padding="14.0dip">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/grid_item_image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="10.0dip"
            android:contentDescription="@string/app_name"
            android:duplicateParentState="true"
            android:scaleType="fitXY" />

        <com.ttu.appathon.request.widget.RobotoCondensedBoldTextView
            android:id="@+id/grid_item_text"
            style="@style/HeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:shadowColor="@color/white"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:text="FOOD"
            android:textColor="@color/header_black"
            android:textStyle="bold"
            android:layout_alignBottom="@+id/grid_item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="30dp"
            />
</RelativeLayout>
    </LinearLayout>
